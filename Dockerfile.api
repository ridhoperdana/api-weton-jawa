# Dockerfile for the Go API server
FROM golang:1.23.2-alpine as builder

# Set the working directory
WORKDIR /app

# Copy the go.mod and go.sum files
# COPY go.mod go.sum ./

# Download dependencies
# RUN go mod download

# Copy the source code
COPY ./api .

# Download dependencies
RUN go mod download

# Build the Go app
RUN go build -o api-weton-jawa

# Final stage
FROM alpine:latest

# Set the working directory
WORKDIR /root/

# Copy the built binary from the builder stage
COPY --from=builder /app/api-weton-jawa .

# Expose port 8080 for the API
EXPOSE 7723

# Run the API server
CMD ["./api-weton-jawa"]
